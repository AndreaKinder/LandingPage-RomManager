---
import Layout from "../../layouts/Layout.astro";
import RomManagerLanding from "../../components/RomManagerLanding.astro";
import { translations, type Language } from "../../i18n/translations";

export function getStaticPaths() {
    return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const currentLang = (lang as Language) || "es";

const pageTitle =
    currentLang === "es"
        ? "ROM Manager - Tu biblioteca digital de juegos retro"
        : "ROM Manager - Your digital library for retro games";
---

<Layout title={pageTitle} lang={currentLang}>
    <RomManagerLanding lang={currentLang} />
</Layout>
