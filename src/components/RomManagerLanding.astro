---
import { translations, type Language } from "../i18n/translations";

interface Props {
  lang: Language;
}

const { lang = "es" } = Astro.props;
const t = translations[lang];
---

<div class="min-h-screen bg-purple-950 relative overflow-hidden">
  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Press+Start+2P&family=VT323&display=swap");

    .pixel-font {
      font-family: "Press Start 2P", cursive;
      line-height: 1.6;
    }

    .retro-font {
      font-family: "VT323", monospace;
      line-height: 1.2;
    }

    /* CRT Scanlines Effect */
    .crt-scanlines::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.15),
        rgba(0, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 2px
      );
      pointer-events: none;
      z-index: 999;
      animation: scanline 8s linear infinite;
    }

    @keyframes scanline {
      0% {
        transform: translateY(0);
      }
      100% {
        transform: translateY(10px);
      }
    }

    /* CRT Screen Glow */
    .crt-glow {
      box-shadow:
        inset 0 0 80px rgba(168, 85, 247, 0.2),
        0 0 40px rgba(168, 85, 247, 0.3);
    }

    /* Pixel Perfect Borders */
    .pixel-border {
      border: 4px solid;
      border-image: url("data:image/svg+xml,%3Csvg width='12' height='12' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 0h4v4H0zM8 0h4v4H8zM0 8h4v4H0zM8 8h4v4H8z' fill='%23a855f7'/%3E%3C/svg%3E")
        4;
      image-rendering: pixelated;
    }

    /* Chunky Shadow */
    .pixel-shadow {
      box-shadow:
        4px 0 0 #a855f7,
        0 4px 0 #a855f7,
        4px 4px 0 #a855f7,
        8px 4px 0 rgba(168, 85, 247, 0.6),
        4px 8px 0 rgba(168, 85, 247, 0.6),
        8px 8px 0 rgba(168, 85, 247, 0.4);
    }

    /* Blink Animation */
    @keyframes blink {
      0%,
      49% {
        opacity: 1;
      }
      50%,
      100% {
        opacity: 0;
      }
    }

    .blink {
      animation: blink 1s infinite;
    }

    /* Grid Background */
    .grid-bg {
      background-image:
        linear-gradient(rgba(168, 85, 247, 0.05) 1px, transparent 1px),
        linear-gradient(90deg, rgba(168, 85, 247, 0.05) 1px, transparent 1px);
      background-size: 20px 20px;
    }

    /* 8-bit style button */
    .btn-8bit {
      clip-path: polygon(
        4px 0,
        calc(100% - 4px) 0,
        100% 4px,
        100% calc(100% - 4px),
        calc(100% - 4px) 100%,
        4px 100%,
        0 calc(100% - 4px),
        0 4px
      );
      transition: all 0.1s;
    }

    .btn-8bit:hover {
      transform: translate(2px, 2px);
    }

    .btn-8bit:active {
      transform: translate(4px, 4px);
    }

    /* Pixel art style icons */
    .pixel-icon {
      image-rendering: pixelated;
      image-rendering: -moz-crisp-edges;
      image-rendering: crisp-edges;
    }

    /* Glitch effect */
    @keyframes glitch {
      0% {
        transform: translate(0);
      }
      20% {
        transform: translate(-2px, 2px);
      }
      40% {
        transform: translate(-2px, -2px);
      }
      60% {
        transform: translate(2px, 2px);
      }
      80% {
        transform: translate(2px, -2px);
      }
      100% {
        transform: translate(0);
      }
    }

    /* NES cartridge style */
    .cartridge {
      background: linear-gradient(135deg, #2d2d44 0%, #1a1a2e 100%);
      border-top: 8px solid #6b7280;
      border-bottom: 4px solid #111;
      position: relative;
    }

    .cartridge::before {
      content: "";
      position: absolute;
      top: -8px;
      left: 20%;
      right: 20%;
      height: 4px;
      background: #9ca3af;
    }

    .lang-dropdown {
      position: relative;
    }

    .lang-dropdown-content {
      display: none;
      position: absolute;
      right: 0;
      top: 100%;
      margin-top: 0.5rem;
      min-width: 120px;
      background: #1a1a2e;
      border: 4px solid #a855f7;
      border-radius: 0.25rem;
      z-index: 1000;
    }

    .lang-dropdown-content.open {
      display: block;
    }

    .lang-option {
      display: block;
      padding: 0.75rem 1rem;
      color: #d1d5db;
      text-decoration: none;
      transition: all 0.2s;
      border-bottom: 2px solid rgba(168, 85, 247, 0.2);
    }

    .lang-option:last-child {
      border-bottom: none;
    }

    .lang-option:hover {
      background: rgba(168, 85, 247, 0.3);
      color: white;
    }

    .lang-option.active {
      background: rgba(168, 85, 247, 0.5);
      color: white;
    }

    #mobile-menu {
      display: none;
    }

    #mobile-menu.open {
      display: block;
    }
  </style>

